@model HouseAccounting.Web.Models.Incomes.IncomeListViewModel

<h2>Příjmy</h2>

<p>
    @Html.ActionLink("Vytvořit nový příjem", "Create")
</p>
<table class="table">
    <tr>
        <th>Datum</th>
        <th>Částka</th>
        <th>Popis</th>
        <th>Osoba</th>
        <th>Kategorie</th>
    </tr>

@foreach (var income in Model.Incomes) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => income.CreatedShortDate)
        </td>
        <td>
            <b>
                @{
                    var amount = income.Amount.ToCurrencyString();
                    @Html.DisplayFor(modelItem => amount);
                }
            </b>
        </td>
        <td>
            @Html.DisplayFor(modelItem => income.Description)
        </td>
        <td>
            @if (income.Person != null)
            {
                @Html.DisplayFor(modelItem => income.Person.FullName)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => income.Category.Name)
        </td>
        <td>
            @Html.ActionLink("Editovat", "Edit", new { id= income.Id }) |
            @Html.ActionLink("Detail", "Details", new { id= income.Id }) |
            @Html.ActionLink("Smazat", "Delete", new { id= income.Id })
        </td>
    </tr>
}

</table>
